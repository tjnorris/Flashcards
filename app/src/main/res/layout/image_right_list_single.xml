<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/default_background">

    <TableRow android:id="@+id/list_row" android:weightSum="10"
              android:layout_width="match_parent">
        <TextView android:layout_weight="9.75" android:id="@+id/list_text"
            android:layout_gravity="center_vertical" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/list_img"
            android:layout_gravity="right"/>
    </TableRow>
</TableLayout>